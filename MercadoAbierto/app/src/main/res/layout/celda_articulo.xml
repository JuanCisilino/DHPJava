<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagen_celda_articulo"
        android:layout_marginTop="10dp"
        android:layout_width="190dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView_nombre_articulo"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imagen_celda_articulo"
        android:gravity="center_horizontal"
        android:text="Nombre del Articulo"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_precio_articulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/imagen_celda_articulo"
        android:gravity="center_horizontal"
        android:text="precio"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView_descripcion_articulo"
        android:layout_width="412dp"
        android:layout_height="46dp"
        android:layout_below="@+id/imagen_celda_articulo"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:layout_toRightOf="@+id/imagen_celda_articulo"
        android:text="Descripcion del articulo"
        android:textSize="20dp" />


</RelativeLayout>