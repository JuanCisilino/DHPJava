<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95130101"
    android:orientation="vertical"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/textViewTitulodos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:gravity="center_horizontal"
        android:text="Seleccione la hora actual"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/boton_sumarHoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulodos"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="+"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView_contadorHoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton_sumarHoras"
        android:layout_marginLeft="58dp"
        android:text="00"
        android:textSize="60dp" />



    <Button
        android:id="@+id/boton_restarHoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_contadorHoras"
        android:layout_marginLeft="50dp"
        android:text="-"
        android:textSize="30dp" />


    <Button
        android:id="@+id/boton_sumarMinutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulodos"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="200dp"
        android:text="+"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView_contadorMinutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton_sumarMinutos"
        android:layout_marginLeft="160dp"
        android:text="00"
        android:textSize="60dp" />

    <Button
        android:id="@+id/boton_restarMinutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_contadorMinutos"
        android:layout_marginLeft="150dp"
        android:text="-"
        android:textSize="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonOK"
        android:text="OK"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/textView_Dispuntos"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView_contadorHoras"
        android:text=":"
        android:textSize="65dp" />

    <ToggleButton
        android:id="@+id/botonAMPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_contadorMinutos"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="320dp"
        android:text="ToggleButton"
        android:textOff="AM"
        android:textOn="PM" />


</RelativeLayout>