<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FragmentAgregarArticulo">

    <ImageView
        android:id="@+id/fragment_AgregarArticulo_imagen_celda_articulo"
        android:layout_marginTop="30dp"
        android:layout_width="190dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/fragment_AgregarArticulo_editText_nombre_articulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/fragment_AgregarArticulo_imagen_celda_articulo"
        android:gravity="center_horizontal"
        android:hint="Nombre de Articulo"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/fragment_AgregarArticulo_textView_precio_articulo"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/fragment_AgregarArticulo_imagen_celda_articulo"
        android:gravity="center_horizontal"
        android:text="$"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/fragment_AgregarArticulo_editText_precio_articulo"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/fragment_AgregarArticulo_textView_precio_articulo"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:hint="Precio"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/fragment_AgregarArticulo_editText_descripcion_articulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_AgregarArticulo_imagen_celda_articulo"
        android:layout_marginTop="25dp"
        android:autoSizeTextType="uniform"
        android:hint="Ingrese la descripcion de su producto."
        android:textSize="20dp" />

    <Button
        android:id="@+id/fragment_AgregarArticulo_botonAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar a la Lista"
        android:layout_below="@+id/fragment_AgregarArticulo_editText_descripcion_articulo"
        />

</RelativeLayout>