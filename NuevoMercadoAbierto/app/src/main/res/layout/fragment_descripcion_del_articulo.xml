<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FragmentDescripcionDelArticulo">

    <ImageView
        android:id="@+id/fragment_descripcion_imagen_celda_articulo"
        android:layout_marginTop="30dp"
        android:layout_width="190dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragment_descripcion_textview_nombre_articulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/fragment_descripcion_imagen_celda_articulo"
        android:gravity="center_horizontal"
        android:hint="Nombre de Articulo"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/fragment_descripcion_textView_precio_articulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/fragment_descripcion_imagen_celda_articulo"
        android:gravity="center_horizontal"
        android:text="Precio"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/fragment_descripcion_textview_descripcion_articulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_descripcion_textView_precio_articulo"
        android:layout_marginTop="25dp"
        android:autoSizeTextType="uniform"
        android:hint="Descripcion del articulo"
        android:textSize="20dp" />

</RelativeLayout>