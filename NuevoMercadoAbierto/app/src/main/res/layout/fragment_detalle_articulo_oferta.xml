<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FragmentDetalleArticuloOferta">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/fragment_ArticuloOferta_Titulo"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    <TextView
        android:id="@+id/fragment_ArticuloOferta_Precio"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/fragment_ArticuloOferta_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/fragment_ArticuloOferta_Descripcion"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/fragment_ArticuloOferta_Precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/fragment_imagenArticuloOferta"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>