<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textView_Quienganaraeltrono"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="#0C0C0C"
        android:gravity="center"
        android:text="Quien ganara el trono?"
        android:textColor="#F5F4F4"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_Presionaelbotonyenterate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C0C0C"
        android:gravity="center"
        android:text="Presiona el boton y enterate"
        android:textColor="#F5F4F4"
        android:textSize="25dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imagenDeHeroe"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        app:srcCompat="@drawable/nightking" />

    <TextView
        android:id="@+id/night_king"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C0C0C"
        android:gravity="center"
        android:text="Nigth King"
        android:textColor="#F5F4F4"
        android:textSize="25dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/botonDescubrir"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="Descubrir"
        android:background="#03A9F4"
        android:textStyle="bold"
        android:textSize="20dp"/>


</LinearLayout>