<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FragmentDetalleDelInvitado">


    <ImageView
        android:id="@+id/imageView_celda"
        android:layout_width="220dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView_detalle_Nombre"
        android:layout_toRightOf="@+id/imageView_celda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="TextView"

        />

    <TextView
        android:id="@+id/textView_detalle_Apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@+id/textView_Nombre"
        android:layout_toRightOf="@+id/imageView_celda"
        android:gravity="center_horizontal"
        android:text="TextView"

        />


</RelativeLayout>